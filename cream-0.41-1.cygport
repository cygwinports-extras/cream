DESCRIPTION="Easy-to-use configuration for Vim"
HOMEPAGE="http://cream.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"

src_compile() { :; }

src_test() { :; }

src_install() {
	check_prog_req vim

	cd ${S}

	export VIMRUNTIME=$(vim -e -T dumb --cmd 'exe "set t_cm=\<C-M>"|echo $VIMRUNTIME|quit' | tr -d '\015')

	DESTDIR=${D} ./INSTALL.sh /usr || error "install failed"
	dodoc docs/*.txt
}
